export EDITOR=vim
export TERM=xterm-256color
export PATH=$HOME/oh-my-dotfiles/app/vim/bin:$PATH
export PATH=$HOME/.local/bin:$PATH          # User executables for linux
export PATH=$HOME/Applications/bin:$PATH    # User executables for macos
export PATH=$HOME/.linuxbrew/bin:$PATH
export PATH="/home/linuxbrew/.linuxbrew/bin:$PATH"
export PATH=$HOME/Library/Python/3.6/bin:$HOME/Library/Python/2.7/bin:$PATH
export PATH="/usr/local/sbin:$PATH"
alias proxycurl='curl --socks5-hostname socks5://localhost:1086'
alias ns='nvidia-smi'

# sjtug mirror for homebrew.bintray.com
export HOMEBREW_BOTTLE_DOMAIN=https://mirrors.sjtug.sjtu.edu.cn/homebrew-bottles

# ls colors
if [[ `uname` == 'Darwin' ]]; then
    # use gnu coreutils ls for mac
    gnuls_dir=/usr/local/opt/coreutils/libexec/gnubin/ls
    if [[ -e $gnuls_dir ]]; then
        alias ls='/usr/local/opt/coreutils/libexec/gnubin/ls --color=tty -F --group-directories-first'
    fi
else
    # linux
    alias ls='ls --color=tty -F --group-directories-first'
fi

# colorscheme {{{
# for more configuration details, refer to https://askubuntu.com/questions/466198/how-do-i-change-the-color-for-directories-with-ls-in-the-console 

