{
    "signature.enable": false,
    "latex.build.args": ["-xelatex", "-bibtex"],
    "latex.build.onSave": true,
    "coc.source.word.filetypes": ["text", "markdown"],
    "coc.source.around.enable": false,
    "coc.source.buffer.enable": false,
    "python.formatting.provider": "autopep8",
    "python.analysis.typeCheckingMode": "off",
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.pylintArgs": ["--disable", "C,R,W"],
    "pyright.organizeimports.provider": "pyright",
    "python.linting.flake8Enabled": false,
    "python.linting.flake8Args": ["--ignore=E128,E126,E261,E501,E302,E225,E226,F401,E402,E701"],
    "python.linting.flake8Args.comment": {
        "F401": "Imported but not used",
        "E402": "module level import not at top of file",
        "E126": "line over-indent for ...",
        "E128": "line under-indented for visual indent",
        "E701": "multiple statements on one line",
        "E261": "2 space before inline comment"
    },
    "diagnostic.enable": true,
    "diagnostic.warningSign": ">",
    "diagnostic.errorSign": "x"
}
